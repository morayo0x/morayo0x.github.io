---
import { getCollection } from "astro:content";
import PageLayout from "@layouts/PageLayout.astro";
import Container from "@components/Container.astro";
// import ListCard from "@components/ListCard.astro";
import { LIST } from "@consts";
// import { collections } from "@content/config";

const collection = (await getCollection("lists")).sort(
  (a, b) => a.data.date.valueOf() - b.data.date.valueOf()
);

const lists = await Promise.all(
  collection.map(async (item) => {
    const { Content } = await item.render();
    return { ...item, Content };
  })
);
---

<PageLayout title={LIST.TITLE} description={LIST.DESCRIPTION}>
  <Container>
    <div class="space-y-10">
      <div
        class="font-semibold animate text-black dark:text-white"
        style="text-decoration:underline;"
      >
        <article>
          <p class="animate font-semibold">
            100 Things I Wish To Do Before I Die
          </p>
        </article>
      </div>
      <ul class="animate flex flex-col gap-2">
        {
          lists.map((entry, id) => (
            <li class="text-black dark:text-white" style="font-style: italic;">
              <p class="animate">
                {id + 1}
                <span style="font-style: normal;">|</span>
                {entry.data.title}&rightarrow; [{entry.data.done}]
              </p>
            </li>
          ))
        }
      </ul>
    </div>
    <Container />
  </Container>
</PageLayout>
